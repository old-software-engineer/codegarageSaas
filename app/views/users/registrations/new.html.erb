<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Login Form</title>
   <%= stylesheet_link_tag 'login_style' %>
  <!--[if lt IE 9]><script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
</head>
  <body>
    <section class="container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), id: "user_form") do |f| %>
        <div class="login">
          <h1>Login to Web App</h1>
            <p><%= f.email_field :email, autofocus: true, placeholder: "Username or Email",style:"width:100%" %></p>
            <p><%= f.password_field :password, autocomplete: "off",placeholder: "password",style:"width:100" %></p>
            <p><%= f.password_field :password_confirmation, autocomplete: "off" %></p>
            <p class="remember_me">
            </p>
            <%= f.submit "Sign up" %>
        </div>
        <div class="login-help">
          <p>Forgot your password? <a href="index.html">Click here to reset it</a>.</p>
        </div>
      <%end%>
    </section>
  </body>
</html>
